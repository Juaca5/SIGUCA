extends layout

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/flipclock.css')
  link(rel='stylesheet', href='/stylesheets/sigucaEscritorio.css')
  link(rel='stylesheet' href='/stylesheets/font-awesome.min.css')
block imgSession
  .divSession#divSession
    img#imgSessionPers(src='images/marito.jpg', alt='something') 
    .btn-group.dropup
                button.btn.btn-default.dropdown-toggle#cSession(type='button', data-toggle='dropdown')
                  span.caret
                ul.dropdown-menu
                  li 
                   a(href='/') Cerrar Sesión 
block sigucaNavbarItems
  ul.nav.navbar-nav
              li.active
                a.active(href="/escritorio")
                  i.icon-home.icon-large
                  |&nbsp;Escritorio
              li
                a(href='/graficos')
                  i.icon-bar-chart.icon-large
                  |&nbsp;Gráficos
              li
                a(href="/justificaciones")
                  i.icon-edit.icon-large  
                  |&nbsp;Justificaciones
              li
                a(href="/configuracion")
                  i.icon-cogs.icon-large
                  |&nbsp;Configuracion
              li
                a(href='/Ayuda')
                  i.icon-question-sign.icon-large     
                  |&nbsp;Ayuda   
              li
                a(href='/registro')
                  i.icon-question-sign.icon-large     
                  |&nbsp;Registro   
              li
                a(href='/logout')
                  i.icon-question-sign.icon-large     
                  |&nbsp;Salida de: #{usuario.username}       
             img(src='images/logo-greencore.png', alt='something',  href="#")#grcSLogo      
          // /.navbar-collapse
        // /.if
  

block content
  .container
    .col-xs-8
      h3 Marcas Personales
      img.img-responsive#grafico(src='/images/tati.PNG', alt='Responsive image') 
    .col-xs-4
     h3 Eventos Pendientes   
     ul.list-group
        li.list-group-item
            span.badge 2
            | Solicitud Ausencias
        li.list-group-item
            span.badge 18
            | Justificaciones
        li.list-group-item
            span.badge 0
            | Solicitudes J.extra
      


    
        
