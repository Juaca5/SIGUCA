block imgSession
  .divSession#divSession
    img#imgSessionPers(src='images/marito.jpg', alt='something') 
    .btn-group.dropup
                button.btn.btn-default.dropdown-toggle#cSession(type='button', data-toggle='dropdown')
                  span.caret
                ul.dropdown-menu
                  li 
                   a(href='/') Cerrar Sesión
block sigucaNavbarItems
 
block content  
  .container
        .col-xs-8
          h2 Marcas
          img.img-responsive#grafico(src='/images/todos.PNG', alt='Responsive image')


        .col-xs-4#filtros
             div.filter
                 label#tHorario(for='horario') 
                   |Soporte Técnico
             div.filter
                 label#tGrafico(for='grafico') 
                   |Tipo de Gráfico: 
                 .btn-group
                     button.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                      | Marcas
                      span.caret
                     ul.dropdown-menu
                      li
                       a(href='#') Porcentajes
             div.filter
                  label#empleados(for='empleados') 
                   |Empleados: 
                  .btn-group
                     button#empleadosSelec.btn.btn-default.dropdown-toggle(type='button', data-toggle='dropdown')
                      | Todos
                      span.caret
                     ul.dropdown-menu
                      li
                       a#alex(href="#", onclick= 'changeImageAlex()') Alexander Picado 
                      li
                       a(href='#', onclick= 'changeImageCar()') Carlos Solano
                      li
                       a(href='#', onclick='changeImageTa()') Tatiana Moreira
                      li
