extends layout

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/sigucaInicio.css')
 

block sigucaNavbarItems
  

block content
 
  div.container#login-container
    //svg( version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px" y="0px" width="500px" height="500px" viewBox="0 0 500 500" enable-background="new 0 0 500 500" xml:space="preserve")
    form(action='/registro', method='post')#login-form.well.span4
      h1 SIGUCA
      p.subheading Registre un usuario nuevo:
      div.form-group
        label(for="usernameInput")
          |Usuario:
        input.form-control#textInput(type="text", name="username", placeholder="Usuario")
      div.form-group
        label(for="tipoInput")
          |Tipo de Usuario:
        select.form-control#textInput(type="text", name="tipo") 
          option Empleado
          option Supervisor
          option Administrador
      div.form-group
        label(for="passwordInput")
          |Contraseña:
        input.form-control#passInput(type="password", name="password", placeholder="Contraseña")
      button(type="submit")#btn-login.btn.btn-primary
        i.icon-lock.icon-white
        | Ingresar


block sigucaJS
  
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
  script(src='/twitter-bootstrap/twitter-bootstrap-v2/js/bootstrap-modal.js')
  script(src= '/javascripts/svg.js')
  script(src="javascripts/snap.svg-min.js")