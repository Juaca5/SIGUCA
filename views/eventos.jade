extends layout

block content  
  div.container
      .col-xs-12
        h3 Justificaciones
        br
        .table-responsive
        table.table
            thead
              tr
                th Fecha
                th Motivo
                th Detalle
                th Comentario
                th Estado
            tbody 
              each justificacion, i in justificaciones
                tr
                  td #{justificacion.fecha} 
                  td #{justificacion.motivo} 
                  td #{justificacion.detalle} 
                  td #{justificacion.comentarioSupervisor} 
                  td #{justificacion.estado} 
                          

        h3 Solicitudes Horas Extras
        br
        .table-responsive
        table.table
            thead
              tr
                th Fecha
                th Día
                th Hora Inicio 
                th Hora Salida
                th Cantidad de Horas
                th Motivo
                th Comentario
                th Estado
            tbody 
              each extra, i in extras
                tr
                  td #{extra.fecha} 
                  td #{extra.diaInicio} 
                  td #{extra.horaInicio} 
                  td #{extra.horaFinal} 
                  td #{extra.cantHoras} 
                  td #{extra.motivo} 
                  td #{extra.comentarioSupervisor} 
                  td #{extra.estado} 

        h3 Solicitudes Permisos
        br
        .table-responsive
        table.table
            thead
              tr
                th Fecha
                th Día Inicial
                th Día Final 
                th Cantidad Días
                th Motivo
                th Detalle
                th Comentario
                th Estado
            tbody 
              each permiso, i in permisos
                tr
                  td #{permiso.fecha} 
                  td #{permiso.diaInicio} 
                  td #{permiso.diaFinal} 
                  td #{permiso.cantidadDias} 
                  td #{permiso.motivo} 
                  td #{permiso.detalle} 
                  td #{permiso.comentarioSupervisor} 
                  td #{permiso.estado} 