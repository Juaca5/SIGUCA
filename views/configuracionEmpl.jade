extends layoutEmpl

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/sigucaConfiguraciones.css')
block imgSession

block gcsNavbarItems
  ul.nav.navbar-nav 
block content
  .container 
    .col-xs-2
    .col-xs-8

      div#containerCentral
        h3  Configuracion Empleado
        
        div#confEmpl
          
          .control-group
            label.control-laber(for='accion')
              .controls
                button#accion.btn.btn-primary(name='passwordChange', href='#passwordChange', data-toggle='modal') Cambiar Contraseña    
                #passwordChange.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
                 .modal-dialog
                  .modal-content
                    .modal-header
                      button.close(type='button', data-dismiss='modal', aria-hidden='true') X Cerrar
                      h4.modal-title SIGUCA Cambio de Contraseña
                    .modal-body
                      form.form-horizontal()
                       fieldset
                            label(for="currentpassword")
                                 |Contraseña Actual
                                 span#pressElmnt 
                                 |:
                              .input-prepend
                              span.add-on
                              input#inputIcon.span2(type='password', placeholder='Contraseña Actual', ng-model='query', name=currentPassword)
                            label(for="newPassword")
                                 |Nueva Contraseña
                                 span#pressElmnt 
                                 |:
                              .input-prepend
                              span.add-on
                              input#inputIcon.span2(type='password', placeholder='Nueva Contraseña', ng-model='query', name=newPassword)
                            label(for="repeatNewPassword")
                                 |Nueva Contraseña
                                 span#pressElmnt 
                                 |:
                              .input-prepend
                              span.add-on
                              input#inputIcon.span2(type='password', placeholder='Nueva Contraseña', ng-model='query', name=repeatNewPassword)
                            .controls
                               button#ingreso.btn.btn-success(name='ingreso') Ingresar
                               button#cancelar.btn.btn-danger(name='cancelar') Cancelar   
    .col-xs-2

