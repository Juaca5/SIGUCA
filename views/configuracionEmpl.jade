extends layoutEmpl

block content
  .container 
    .col-xs-2
    .col-xs-8

      div#containerCentral
        h3  Configuracion Empleado
        
        div#confEmpl
          
          .control-group
            label.control-laber(for='accion')
              .controls
                button#accion.btn.btn-primary(name='passwordChange', href='#passwordChange', data-toggle='modal') Cambiar Contraseña    
          #passwordChange.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
           .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') x
                h4.modal-title SIGUCA Cambio de Contraseña
              .modal-body
                form(role='form', method="POST"/*, action="/cambioPassword"*/)#login-form.well.span4
                  .form-group
                    label(for='currentpassword') Contraseña Actual
                      input.form-control(type='password', placeholder='Contraseña Actual', ng-model='query', name='currentPassword')
                  .form-group
                    label(for='newPassword') Nueva Contraseña
                      input.form-control(type='password', placeholder='Nueva Contraseña', ng-model='query', name='newPassword')
                    label(for='repeatNewPassword') Repita Nueva Contraseña
                      input.form-control(type='password', placeholder='Repetir Nueva Contraseña', ng-model='query', name='repeatNewPassword')
                  .form-group
                    .controls
                     button#ingreso.btn.btn-success(name='ingreso') Ingresar
                     button#cancelar.btn.btn-danger(name='cancelar') Cancelar   
    .col-xs-2

