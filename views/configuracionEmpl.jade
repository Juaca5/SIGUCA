block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/flipclock.css')
  link(rel='stylesheet', href='/stylesheets/sigucaConfiguraciones.css')
  link(rel='stylesheet' href='/stylesheets/font-awesome.min.css')
block imgSession
  .divSession#divSession
    img#imgSessionPers(src='images/marito.jpg', alt='something') 
    .btn-group.dropup
                button.btn.btn-default.dropdown-toggle#cSession(type='button', data-toggle='dropdown')
                  span.caret
                ul.dropdown-menu
                  li 
                   a(href='/') Cerrar Sesión
block content
  .container 
    .col-xs-2
    .col-xs-8

      div#containerCentral
        h3  Seleccione el elemento
        div#contBotones
          button#empleados.btn.btn-success(name='agregar', onclick="a(href='/empleado')") Empleados
          button#tipHorarios.btn.btn-success(name='modificar') Tipos de Horarios
        div#busqueda
            label(for="codInput")
                |Digite el código de 
                span#pressElmnt 
                |:
              .input-prepend
              span.add-on
              input#inputIcon.span2(type='text', placeholder='Ingrese Código', ng-model='query')
        div#irBusqueda
          button(type="submit")#btn-buscar.btn.btn-primary
            i.icon-search.icon-white
            | Buscar
          button(type="submit")#btn-busquedaAva.btn.btn-primary
            i.icon-filter.icon-white
            | Búsqueda Avanzada
    
    .col-xs-2
                    
   
