extends layout

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/sigucaInicio.css')
 

block sigucaNavbarItems
  ul.nav.navbar-nav
    li
     a.active(href='/Ayuda')
      |Ayuda 
      i.icon-question-sign.icon-large 


block content
  div.container#login-container
    form(method="post")#login-form.well.span4
      h1 SIGUCA
      p.subheading Sistema de Gestión de Usuarios y Control de Asistencia
      div.form-group
        label(for="usernameInput")
          |Correo:
        input.form-control(type="text" id="#usernameInput" placeholder="Correo")
      div.form-group
        label(for="passwordInput")
          |Contraseña:
        input.form-control(type="password" id="usernameInput" placeholder="Contraseña")
      button(type="submit")#btn-login.btn.btn-primary
        i.icon-lock.icon-white
        | Ingresar
      label#remember-me.checkbox Recordarme
        input(type="checkbox", checked='checked')



block sigucaJS
  
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js')
  script(src='/twitter-bootstrap/twitter-bootstrap-v2/js/bootstrap-modal.js')
  