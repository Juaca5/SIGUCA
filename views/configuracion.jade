extends layout

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/sigucaConfiguraciones.css')

block gcsNavbarItems
  ul.nav.navbar-nav
block content
    div.container
      .col-xs-12
        h3 Justificaciones
        br
        .table-responsive
        table.table
            thead
              tr
                th Fecha
                th Usuario
                th Motivo
                th Detalle
                th Estado
                th Comentario
            tbody 
              each justificacion, i in justificaciones
                tr
                  td #{justificacion.fechaCreada} 
                  td #{justificacion.usuario} 
                  td #{justificacion.motivo} 
                  td #{justificacion.detalle} 
                  td #{justificacion.estado} 
                  form(role='form', method="POST", action="/getionarJustificacion/"+justificacion.id)
                    td
                      textarea.form-control(rows="1" cols="50", name="comentarioSupervisor", placeholder="AÃ±ada comentario")
                    td
                      select.selectpicker.show-tick(name='estado')
                        option(value='1') Aceptar
                        option(value='2') Rechazar
                        option(value='0') Pendiente
                    td
                      button.btn.btn-success(type='submit', name='gestionar') Gestionar                 
 



        h3 Solicitudes Horas Extras
        br
        .table-responsive
        table.table
            thead
              tr
                th Fecha
                th Usuario
                th Dia
                th Horas 
                th Motivo
            tbody 
              each extra, i in extras
                tr
                  td #{extra.fechaCreada} 
                  td #{extra.usuario} 
                  td #{extra.diaInicio} 
                  td #{extra.horaFinal} 
                  td #{extra.motivo} 
                  form(role='form', method="POST", action="/getionarSolicitud/"+extra.id)
                    td
                      select.selectpicker.show-tick(name='estado')
                        option(value='Aceptada') Aceptar
                        option(value='Rechazada') Rechazar
                        option(value='Pendiente') Pendiente
                    td
                      button.btn.btn-success(type='submit', name='gestionar') Gestionar

        h3 Solicitudes Permisos
        br
        .table-responsive
        table.table
            thead
              tr
                th Fecha
                th Usuario
                th Dia Inicial
                th Dia Final 
                th Motivo
            tbody 
              each permiso, i in permisos
                tr
                  td #{permiso.fechaCreada} 
                  td #{permiso.usuario} 
                  td #{permiso.diaInicio} 
                  td #{permiso.diaFinal} 
                  td #{permiso.motivo} 
                  form(role='form', method="POST", action="/getionarSolicitud/"+permiso.id)
                    td
                      select.selectpicker.show-tick(name='estado')
                        option(value='Aceptada') Aceptar
                        option(value='Rechazada') Rechazar
                        option(value='Pendiente') Pendiente
                    td
                      button.btn.btn-success(type='submit', name='gestionar') Gestionar
                                 
