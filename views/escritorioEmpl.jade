block content
  .container
    //- #fancyClock
  .container
    .col-xs-8
      h3 Marcas Personales
      img.img-responsive#grafico(src='/images/tati.PNG', alt='Responsive image') 
    .col-xs-4
     h3 Eventos Pendientes   
     ul.list-group
        li.list-group-item
            span.badge 2
            | Solicitud Ausencias
        li.list-group-item
            span.badge 18
            | Justificaciones
        li.list-group-item
            span.badge 0
            | Solicitudes J.extra
    
          
    div.container
    .col-xs-2
    .col-xs-8
      div#containerCentral
        h3  Marca Mediante el Sistema
        div#contBotones
          div#Marca             
           button#marca.btn.btn-success(name='marcar', onclick= "changeElemt('marca')", data-toggle="modal" data-target="#addMarca") Realizar Marca
            
    .col-xs-2      
      //modal para realizar marcas
      #addMarca.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        
        .modal-dialog
            .modal-content
              
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') Ã—
                h1#myModalLabel.modal-title SIGUCA
                h3#myModalLabel.modal-title Marcar Mediante Sistema
              .modal-body
               table.table 
                tr
                  modal.group     
                    form(role='form', method="POST", action="/marca")
                        td
                          button.btn.btn-success(type='submit') Entrada
                  modal.group
                    form(role='form', method="POST", action="/marca")
                        td
                          button.btn.btn-success(type='submit') Salida
                tr
                  modal.group     
                    form(role='form', method="POST", action="/marca")
                        td
                          button.btn.btn-warning(type='submit') Salida Receso
                  modal.group
                    form(role='form', method="POST", action="/marca")
                        td
                          button.btn.btn-warning(type='submit') Entrada Receso          
                tr
                  modal.group     
                    form(role='form', method="POST", action="/marca")
                        td
                          button.btn.btn-primary(type='submit') Salida Almuerzo
                  modal.group
                    form(role='form', method="POST", action="/marca")
                        td
                          button.btn.btn-primary(type='submit') Entrada Almuerzo                    
                
                tr   
                  modal.group
                    td             
                        button.btn.btn-danger(type='button', data-dismiss='modal') Cancelar
              .container
                 #fancyClock    
              .modal-footer    
                

    
        
