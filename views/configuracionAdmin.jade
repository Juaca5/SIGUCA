    .col-xs-2
      #addHorario.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#myModalLabel.modal-title Añadir nuevo departamento
              .modal-body
                form(role='form')
                    .form-group
                      label(for='nombre') Nombre del Horario:
                      input#nombre.form-control( placeholder='Nombre del horario')
                      .checkbox-inline
                        label
                            input(type='checkbox')
                            | Jornada fija
                      .checkbox-inline
                        label
                            input(type='checkbox')
                            | Jornada libre
                    .form-group
                      label(for='hEntrada') Hora de entrada:
                      input#idSup.form-control( placeholder='Hora de entrada')
                    .form-group
                      label(for='hSalida') Hora de salida:
                      input#horario.form-control( placeholder='Hora de salida')   
                      label(for='iAlmuerzo') Inicio de almuerzo:
                      input#horario.form-control( placeholder='Inicio de Almuerzo')   
                      label(for='fAlmuerzo') Final de almuerzo:
                      input#horario.form-control( placeholder='Final de Almuerzo')
                      label(for='tReceso') Tiempo de receso:
                      input#horario.form-control( placeholder='numero de horas + h  numero de minutos + m')    

              .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
                button.btn.btn-default(type='submit') Ingresar
      #addDep.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#myModalLabel.modal-title Añadir nuevo departamento
              .modal-body
                form(role='form')
                  .form-group
                      label(for='nombreArea') Nombre:
                      input#group.form-control( placeholder='Nombre del area')
                    .form-group
                      label(for='idSup') Código del supervisor:
                      input#idSup.form-control( placeholder='Código del supervidor')
                    .form-group
                      label(for='horario') Horario:
                      input#horario.form-control( placeholder='Horario asociado')      
              .modal-footer
                button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
                button.btn.btn-default(type='submit') Ingresar

      //agregar empleados
      #addEmpl.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#myModalLabel.modal-title Añadir nuevo Empleado
              .modal-body
                form(role='form', method="POST", action="/empleado")
                  .form-group
                      label(for='nombre') Nombre:
                      input#group.form-control(type= 'text', placeholder='Nombre', name= 'nombre')
                    .form-group
                      label(for='apellido1') Primer Apellido:
                      input#apellido1.form-control(type= 'text', placeholder='Primer Apellido', name= 'apellido1')
                    .form-group
                      label(for='apellido2') Segundo Apellido:
                      input#apellido2.form-control(type= 'text', placeholder='Segundo Apellido', name='apellido2')
                    .form-group
                      label(for='email') Correo Eléctronico:
                      input#email.form-control(type= 'email', placeholder='Correo Electronico', name='email')
                    .form-group
                      label(for='cedula') Cédula:
                      input#cedula.form-control(type= 'Number', placeholder='Cédula', name='cedula')
                    .form-group
                      label(for='codTarjeta') Código de Empleado:
                      input#codTarjeta.form-control(type= 'Number', placeholder='Código de Empleado', name='codTarjeta')            
                    button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
                    button.btn.btn-default(type='submit') Ingresar
   
              .modal-footer    

  

