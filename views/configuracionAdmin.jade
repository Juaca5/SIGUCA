extends layoutAdmin

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/sigucaConfiguraciones.css')
  //link(rel='stylesheet', href='/stylesheets/bootstrap-timepicker.min.css')

block gcsNavbarItems
  ul.nav.navbar-nav
block content
    div.container
      .col-xs-4

          h3#labelIMEC
            |IMEC:
          div#contBotones
            div#empl
              label(for="Departamento")
                |Departamento:
            form(action= '/departamento')
              button#empleados.btn.btn-success(name='agregar', onclick= "changeElemt('departamento')", data-toggle="modal" data-target="#addDep") Nuevo
              button#areas.btn.btn-success(type = 'submit', name='eliminar',  onclick= "/departamento") Modificar o Eliminar      
            
            div#horario
              label(for="horario")
                |Horario:
            form(action= '/horarioN')    
              button#empleados.btn.btn-success(name='agregar', onclick= "changeElemt('horarioN')", data-toggle="modal" data-target="#addHorario") Nuevo       
              button#areas.btn.btn-success(type = 'submit', name='eliminar',  onclick= "/horarioN") Modificar o Eliminar
            div#empleado
              label(for="empleado")
                |Empleado:
            form(action= '/empleado')     
              button#empleados.btn.btn-success(name='agregar', onclick= "changeElemt('empleado')", data-toggle="modal" data-target="#addEmpl") Nuevo 
              button#areas.btn.btn-success(type = 'submit', name='eliminar',  onclick= "/empleado") Modificar o Eliminar
          
    .col-xs-2
      #addHorario.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#myModalLabel.modal-title Añadir nuevo horario
              .modal-body
                form(action='/horarioN', method='post')#login-form.well.span4
                  .form-group
                    h4 Información Básica
                    label(for='nombre') Nombre del Horario:
                      input.form-control#textInput( type="text", name="nombre", placeholder='Nombre del horario')
                    //.checkbox-inline#jFija
                      label
                        input(type='checkbox', name="jornada")
                        | Jornada fija
                    //.checkbox-inline#jLibre
                      label
                        input(type='checkbox', name= "jornada")
                        | Jornada libre
                                
                  .form-group
                    h4 Información de jornada
                    label(for='hEntrada') Hora de entrada:
                      input.form-control#textInput( type="text", name= "horaEntrada", placeholder='Hora de entrada')
                    //div.input-append.bootstrap-timepicker
                    //  input#timepicker1.input-small(type="text")
                    //  span.add-on
                    //    img.icon-time// Esto comentado no funciona es de bootstrap-timepicker-min
    
                    label(for='hSalida') Hora de salida:
                      input.form-control#textInput(type="text", name="horaSalida", placeholder='Hora de salida')
                    label(for='rJornada') Rango de jornada:
                      input.form-control#textInput(type="text", name="rangoJornada", placeholder='6 (horas diarias)')
                  .form-group
                    h4 Información de descansos
                    label(for='tReceso') Rango de receso:
                      input.form-control#textInput( type="text", name="tiempoReceso", placeholder='45m')   
                    label(for='tAlmuerzo') Rango de almuerzo:
                      input.form-control#textInput(type="text", name="tiempoAlmuerzo", placeholder='1h30m')
                     
                  button.btn.btn-default(type='submit') Ingresar
                  button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
      

      //agregar departamento            
      #addDep.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
        .modal-dialog
            .modal-content
              .modal-header
                button.close(type='button', data-dismiss='modal', aria-hidden='true') ×
                h4#myModalLabel.modal-title Añadir nuevo departamento
              .modal-body
                form(role='form', method="POST", action="/departamento")#login-form.well.span4
                  .form-group
                      label(for='nombre') Nombre:
                        input#group.form-control( type="text", placeholder='Nombre del area', name= "nombre")
                  button.btn.btn-default(type='submit') Ingresar
                  button.btn.btn-default(type='button', data-dismiss='modal') Cancelar                

      //agregar empleados
      #addEmpl.modal.fade(tabindex='-1', role='dialog', aria-labelledby='myModalLabel', aria-hidden='true')
          .modal-dialog
            .modal-content
              .modal-body
                button.close(type='button', data-dismiss='modal', aria-hidden='true') × 
                h3#myModalLabel.modal-title Añadir nuevo Empleado
                form(role='form', method="POST", action="/empleado")#login-form.well.span4
                    .form-group
                      h3 Información Básica
                      label(for='nombre') Nombre:
                        input#group.form-control(type= 'text', placeholder='Carlos', name= 'nombre')
                      label(for='cedula') Cédula:
                       input#cedula.form-control(type= 'text', placeholder='110459625', name='cedula') 
                    .form-group
                      label(for='apellido1') Primer Apellido:
                        input#apellido1.form-control(type= 'text', placeholder='Corella', name= 'apellido1')
                      label(for='apellido2') Segundo Apellido:
                       input#apellido2.form-control(type= 'text', placeholder='Sandi', name='apellido2')   
                      label(for='email') Correo Eléctronico:
                        input#email.form-control(type= 'email', placeholder='alguien@ejemplo.com', name='email')
                       

                    .form-group 
                      h3 Información Laboral
                      label(for='codTarjeta') Código de Empleado:
                        input#codTarjeta.form-control(type= 'text', placeholder='Código de Empleado', name='codTarjeta')
                      label(for="usernameInput")
                        |Usuario:
                        input.form-control#textInput(type="text", name="username", placeholder="Usuario")
                      label(for="tipoInput")
                        |Tipo de Usuario:
                        select.form-control#textInput(type="text", name="tipo") 
                          option Empleado
                          option Supervisor
                          option Administrador
                      label(for='departamento') Departamento:
                        select.form-control#selectDepartamentos(type="text", name="idDepartamento", multiple) 
                          each departamento, i in departamentos
                              option(value= departamento.id) #{departamento.nombre} 

                      /////////Verificar eso... seguramente hay que cambiarlo para que se cree un horario, ya que pueden variar por cada usuario.

                      label(for='horario') Horario:
                        select.form-control#textInput(type="text", name="idHorario") 
                          each horario, i in horarios
                              option(value= horario.id) #{horario.nombre} 

                    .form-group
                      label(for="passwordInput")
                        |Contraseña:
                        input.form-control#passInput(type='text', size='18', name="password", placeholder="Contraseña")
                        button.btn.btn-default(type='button', onclick='generatepass(4)') Generar Contraseña
                        div#correoMsj 
                                    
                    button.btn.btn-default(type='submit') Ingresar
                    button.btn.btn-default(type='button', data-dismiss='modal') Cancelar
      
