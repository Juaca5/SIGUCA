                          td #{just.fechaJust.str}
                          td #{just.motivo}
                          td #{just.informacion}
                          td 
                            button.btn.btn-success(type='button',data-toggle="modal", data-target="#updateJustificacion" ,data-value=just._id ) Justificar
                    tfoot
                      tr
                        td(colspan='8')
                          .pagination.pagination-centered.hide-if-no-paging 

                 
  
  
