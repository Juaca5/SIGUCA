extends layout

block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/flipclock.css')
  link(rel='stylesheet', href='/stylesheets/sigucaJustificaciones.css')
  link(rel='stylesheet' href='/stylesheets/font-awesome.min.css')

block sigucaNavbarItems
  hr
  ul#nav.main
    li
     a(href='/escritorio')
       |Escritorio&nbsp;
       i.icon-home.icon-large  
    li
     a(href="/graficos")
       |Gráficos&nbsp;
       i.icon-bar-chart.icon-large
    li
     a.active(href="/justificaciones")
       |Justificaciones&nbsp;
       i.icon-edit.icon-large
    li
     a(href="/configuracion")
       |Configuración&nbsp;
       i.icon-cogs.icon-large
    li
     a(href="/ayuda")
        |Ayuda&nbsp;
        i.icon-question-sign.icon-large  

block content
  div.row
    div.col-sm-8
     img.img-responsive(src='/images/calendar.png', alt='Responsive image')
    div.col-sm-4
     div.permisosSolicitados
       div.permisosMes
         h3 Permisos de Octubre
         ul.permisos
           li Vacaciones
           li Cita

      div.boton
       a.btn.btn-primary(href='/roles', role='button', data-toggle='modal') +Permiso         

block sigucaJS
  script(src="/javascripts/flipclock/libs/prefixfree.min.js")
  script(src="/javascripts/flipclock/flipclock.min.js")
  script(src="/javascripts/sigucaEscritorio.js")
