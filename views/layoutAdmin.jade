doctype 
html 
  head
    meta(charset='utf-8')

    //Para garantizar una adecuada renderización  en caso de dispositivos móviles
    meta(name='viewport', content='width=device-width, initial-scale=1.0')

    //Hojas de estilo utilizadas
    link(rel='stylesheet', href='/stylesheets/font-awesome.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap-theme.min.css')
    link(rel='stylesheet', href='/stylesheets/sigucaAyuda.css')

    title SIGUCA

    block sigucaCSS
    
    
  .container-fluid
   //- Agregue a este bloque elementos de la barra de navegación en páginas internas

 
  body
    div.navbar.navbar-nav.navbar-fixed-top(role="navigation")
      div.navbar-header
        button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse")
          span.sr-only
          span.icon-bar
          span.icon-bar
          span.icon-bar
        span.navbar-brand(href="#")          
          span#barLogo
            img(src='/images/logo-siguca.png',  href= "/Ayuda")#sigucaLogo
            img(src='/images/logo-greencore.png',  href= "/Ayuda")#sigucaLogo
         
        
      div.collapse.navbar-collapse.navbar-ex1-collapse.navbar-right
        block sigucaNavbarItems 
          ul.nav.navbar-nav
            li
              a(href="/escritorioAdmin")
                i.icon-home.icon-large
                |&nbsp;Escritorio
            li
              a(href='/Ayuda')
                i.icon-question-sign.icon-large     
                |&nbsp;Acerca de SIGUCA   
            li
              a(href='/logout')
                img(src='/images/cerrar.jpg', alt='something')      
                |&nbsp;#{usuario.tipo}: #{usuario.username}   
      br     
    block content

    script(src="/js/jquery-2.0.3.min.js")
    script(src="/js/bootstrap.min.js")
    script(src='js/respond-min.js')   
    block sigucaJS