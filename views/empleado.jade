block sigucaCSS
  link(rel='stylesheet', href='/stylesheets/sigucaEscritorio.css')
block imgSession
  
block gcsNavbarItems
  ul.nav.navbar-nav

block content
  .container
    
    h3 Lista de Empleados
    ol
      table.table.table-hover 
        each empleado, i in empleados
          tr
            td #{empleado.username} #{empleado.apellido1} 
            td
               a(href="/empleado/edit/"+empleado.id)  editar
            td
               a(href="/empleado/delete/"+empleado.id)  eliminar



