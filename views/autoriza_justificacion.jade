extend layout

block sigucaCSS
	link(rel='stylesheet', href='/stylesheets/sigucaRoles.css')
	
block content
	h1 Autorización de Justificación Ausencia/Tardía
	form.form-horizontal(action="autoriza_justificacion" method="post")
		div.control-group
			label.control-label(for="Código")
				|Empleado
			div.controls
				input(type="text" name="Empleado" placeholder="123456789")	
		div.control-group
			label.control-label(for="Fecha")
				|Fecha que cometió la Falta
			div.controls
				input(type="text" name="Fecha" placeholder="20-10-2013")
		div.control-group
			label.control-label(for="Motivo")
				|Motivo de la Falta
			div.controls
				input(type="text" name="Motivo" placeholder="Accidente de Tránsito")
		div.control-group
			label.control-label(for="TiempoA")
				|Tipo de Falta
			div.controls
				input(type="text" name="TiempoA" placeholder="Tardia")		
		button.btn.btn-primary(type="submit" value="roles")
			|Injustificada
		button.btn.btn-primary(type="submit" value="roles")
			|Justificada	